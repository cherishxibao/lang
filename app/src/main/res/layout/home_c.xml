<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:paddingLeft="16dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="20dp">
        <TextView
            android:layout_gravity="center_horizontal"
            android:text="嗡嗡精选"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:drawableLeft="@drawable/c1"/>
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="28dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/d1"
                android:drawableBottom="@drawable/e1"
                android:text=" 昵称"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="旅行的意义"/>
        </LinearLayout>

        <LinearLayout
            android:paddingLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/d2"
                android:drawableBottom="@drawable/e2"
                android:text=" 昵称"
                android:textSize="14sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="旅行的意义"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="28dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/d1"
                android:drawableBottom="@drawable/e1"
                android:text=" 昵称"
                android:textSize="14sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="旅行的意义"/>
        </LinearLayout>

        <LinearLayout
            android:paddingLeft="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/d2"
                android:drawableBottom="@drawable/e2"
                android:text=" 昵称"
                android:textSize="14sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="旅行的意义"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/head_bg"
        android:text="查看更多"
        android:textColor="#FF7F00"
        android:layout_gravity="center"/>

</LinearLayout>